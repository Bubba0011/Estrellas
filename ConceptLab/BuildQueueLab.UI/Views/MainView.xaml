<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BuildQueueLab.UI.Views"
						  xmlns:vm="clr-namespace:BuildQueueLab.UI.ViewModels">
	<DataTemplate DataType="{x:Type vm:MainVm}">
		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="Turn">
					<MenuItem Header="Generate Next" Command="{Binding UpdateCommand}" InputGestureText="F5" />
				</MenuItem>
				<MenuItem Header="Planet">
					<MenuItem Header="Enqueue Factory" Command="{Binding CurrentPlanet.EnqueueInstallationCommand}" CommandParameter="Factory" />
					<MenuItem Header="Enqueue Farm" Command="{Binding CurrentPlanet.EnqueueInstallationCommand}" CommandParameter="Farm" />
					<MenuItem Header="Enqueue Mine" Command="{Binding CurrentPlanet.EnqueueInstallationCommand}" CommandParameter="Mine" />
				</MenuItem>
			</Menu>
			
			<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="4">
				<TextBlock Text="Turn: " />
				<TextBlock Text="{Binding Turn}" />
			</StackPanel>
			
			<ContentControl Content="{Binding CurrentPlanet}" />
		</DockPanel>
	</DataTemplate>
</ResourceDictionary>